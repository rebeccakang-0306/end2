<h1>Welcome to DIGICEIPT</h1>
<section>
    <h3>Insert User</h3>
    <form action="/insert-user" method="post">
        <div class="input">
            <label for="username">Username</label>
            <input type="text" id="username" name="username">
        </div>
        <div class="input">
            <label for="password">Password</label>
            <input type="password" id="password" name="password">
        </div>
        <div class="input">
            <label for="firstname">Firstname</label>
            <input type="text" id="firstname" name="firstname">
        </div>
        <div class="input">
            <label for="lastname">Lastname</label>
            <input type="text" id="lastname" name="lastname">
        </div>
        <button type="submit">INSERT</button>
    </form>
</section>
<section>
    <h3>User Login</h3>
    <form action="/user-login/"+id method="post">
        <div class="input">
            <label for="id">ID</label>
            <input type="text" id="id" name="id">
        </div>
        <div class="input">
            <label for="username">Username</label>
            <input type="text" id="username" name="username">
        </div>
        <div class="input">
            <label for="password">Password</label>
            <input type="password" id="password" name="password">
        </div>
        <button type="submit">LOGIN</button>
    </form>
</section>
<section>
    <h3>Get Users</h3>
    <a href="/get-user">Load Users</a>
    <div>
        {{# each items }}
            <article class="item">
                <div>ID: {{this._id}}</div>
                <div>Username: {{ this.username }}</div>
                <div>Firstname: {{ this.firstname }}</div>
                <div>Lastname: {{ this.lastname }}</div>
                <div>Receipts: {{this.receipts}}</div>
            </article>
        {{/each}}
    </div>
</section>

<section>
    <h3>Get Users</h3>
    <a href="/get-Survey">Load Survey</a>
    <div>
        {{# each items }}
            <article class="item">
                <div>ID: {{this._id}}</div>
                <div>Usertype: {{ this.usertype }}</div>
                <div>V1: {{ this.photo1 }}</div>
                <div>V2: {{ this.photo2 }}</div>
                <div>v3: {{this.photo3}}</div>
            </article>
        {{/each}}
    </div>
</section>

